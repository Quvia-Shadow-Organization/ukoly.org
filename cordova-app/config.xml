<?xml version='1.0' encoding='utf-8'?>
<widget id="com.quvia.carbon.app" version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Reboost</name>
    <description>
        Use, come, flush. Evolution, baby
    </description>
    <author email="galook@quvia.online" href="http://quvia.online">
        Quvia Shadow Organization
    </author>
    <!-- this hook will point your config.xml to the DevServer on Serve -->
    <hook type="after_prepare" src="../node_modules/vue-cli-plugin-cordova/serve-config-hook.js" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="StatusBarBackgroundColor" value="#fff" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreenSpinnerColor" value="white" />
    <preference name="NavigationBarBackgroundColor" value="#EDF2F7" />
    <preference name="NavigationBarLight" value="true" />
    <!-- <preference name="TransparentNavigationBar" value="true" /> -->

    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="img/android/drawable-land-hdpi/screen.png" density="land-hdpi"/>
        <splash src="img/android/drawable-land-ldpi/screen.png" density="land-ldpi"/>
        <splash src="img/android/drawable-land-mdpi/screen.png" density="land-mdpi"/>
        <splash src="img/android/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>
        <splash src="img/android/drawable-land-xxhdpi/screen.png" density="land-xxhdpi"/>

        <splash src="img/android/drawable-hdpi/screen.png" density="port-hdpi"/>
        <splash src="img/android/drawable-ldpi/screen.png" density="port-ldpi"/>
        <splash src="img/android/drawable-mdpi/screen.png" density="port-mdpi"/>
        <splash src="img/android/drawable-xhdpi/screen.png" density="port-xhdpi"/>
        <splash src="img/android/drawable-xxhdpi/screen.png" density="port-xxhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
